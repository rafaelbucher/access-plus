---
// src/components/Logo.astro
export interface Props {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  variant?: 'default' | 'light' | 'dark' | 'blue' | 'orange';
}

const { 
  size = 'md', 
  class: className = '',
  variant = 'default'
} = Astro.props;

const sizeClasses = {
  xs: 'logo-xs',
  sm: 'logo-sm', 
  md: 'logo-md',
  lg: 'logo-lg',
  xl: 'logo-xl'
};

const variantClasses = {
  default: 'logo-default',
  light: 'logo-light',
  dark: 'logo-dark',
  blue: 'logo-blue',
  orange: 'logo-orange'
};
---

<div class={`logo ${sizeClasses[size]} ${variantClasses[variant]} ${className}`}>
  <img 
    src="/img/logo.svg"
    alt="Logo"
    class="logo-svg"
    role="img"
    aria-label="Logo"
  />
</div>

<style>
  .logo {
    display: inline-block;
    line-height: 0;
    position: relative;
  }

  .logo-svg {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.2s ease, filter 0.2s ease;
  }

  /* Tailles du logo */
  .logo-xs {
    width: 128px;
    height: auto;
  }

  .logo-sm {
    width: 160px;
    height: auto;
  }

  .logo-md {
    width: 192px;
    height: auto;
  }

  .logo-lg {
    width: 224px;
    height: auto;
  }

  .logo-xl {
    width: 256px;
    height: auto;
  }

  /* Variantes de couleur */
  .logo-default .logo-svg {
    /* Couleurs par défaut du SVG */
  }

  .logo-light .logo-svg {
    filter: brightness(0) invert(1);
  }

  .logo-dark .logo-svg {
    filter: brightness(0);
  }

  .logo-blue .logo-svg {
    filter: hue-rotate(200deg) saturate(1.2);
  }

  .logo-orange .logo-svg {
    filter: hue-rotate(20deg) saturate(1.5) brightness(1.1);
  }

  /* Effets d'interaction */
  .logo:hover .logo-svg {
    transform: scale(1.02);
  }

  .logo:hover.logo-blue .logo-svg,
  .logo:hover.logo-orange .logo-svg {
    filter: brightness(1.1);
  }

  /* Animation d'entrée */
  .logo-svg {
    animation: logoFadeIn 0.6s ease-out;
  }

  @keyframes logoFadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive - adapte automatiquement sur mobile */
  @media (max-width: 768px) {
    .logo-xl {
      width: 224px;
    }
    
    .logo-lg {
      width: 192px;
    }

    .logo-md {
      width: 160px;
    }
  }

  @media (max-width: 480px) {
    .logo-xl {
      width: 192px;
    }
    
    .logo-lg {
      width: 160px;
    }

    .logo-md {
      width: 128px;
    }

    .logo-sm {
      width: 112px;
    }
  }

  /* Support pour le mode sombre automatique */
  @media (prefers-color-scheme: dark) {
    .logo-default .logo-svg {
      filter: brightness(0) invert(1);
    }
  }

  /* États de focus pour l'accessibilité */
  .logo:focus-within {
    outline: 2px solid #1669B6;
    outline-offset: 4px;
    border-radius: 4px;
  }

  /* Optimisation pour l'impression */
  @media print {
    .logo-svg {
      filter: grayscale(100%);
    }
  }

  /* Animation personnalisable */
  .logo.animate-spin .logo-svg {
    transform-origin: center;
    animation: iconSpin 2s linear infinite;
  }

  @keyframes iconSpin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Effet de pulse */
  .logo.animate-pulse .logo-svg {
    animation: logoPulse 2s ease-in-out infinite;
  }

  @keyframes logoPulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.02);
    }
  }
</style>