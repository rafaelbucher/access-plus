---
// src/components/Logo.astro
export interface Props {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}

const { size = 'md', class: className = '' } = Astro.props;

const sizeClasses = {
  xs: 'logo-xs',
  sm: 'logo-sm', 
  md: 'logo-md',
  lg: 'logo-lg',
  xl: 'logo-xl'
};
---

<div class={`logo ${sizeClasses[size]} ${className}`}>
  <img 
    src="/img/logo.svg" 
    alt="Logo" 
    class="logo-image"
  />
</div>

<style>
  .logo {
    display: inline-block;
    line-height: 0;
  }

  .logo-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  /* Tailles */
  .logo-xs {
    width: 128px;
    height: 128px;
  }

  .logo-sm {
    width: 160px;
    height: 160px;
  }

  .logo-md {
    width: 192px;
    height: 192px;
  }

  .logo-lg {
    width: 224px;
    height: 224px;
  }

  .logo-xl {
    width: 256px;
    height: 256px;
  }

  /* Le logo garde ses couleurs d'origine */
  .logo-image {
    filter: none;
  }

  /* Responsive - adapte automatiquement sur mobile */
  @media (max-width: 768px) {
    .logo-xl {
      width: 224px;
      height: 224px;
    }
    
    .logo-lg {
      width: 192px;
      height: 192px;
    }

    .logo-md {
      width: 160px;
      height: 160px;
    }
  }

  /* Animations optionnelles */
  .logo-image {
    transition: transform 0.2s ease, filter 0.2s ease;
  }

  .logo:hover .logo-image {
    transform: scale(1.02);
  }
</style>