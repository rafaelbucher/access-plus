---
// src/pages/design-system.astro
import Logo from '../components/Logo.astro';
---

<html lang="fr">

	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Design System - Astro</title>
	</head>

	<body>
		
		<header class="td-header">
			<div class="td-container">
				<Logo size="xl" variant="default" />
			</div>
		</header>

		<main class="main">
			<section class="td-section">
				<h1>Design System</h1>
				<p class="subtitle">Guide des composants et styles utilisés dans le projet</p>
			</section>

			<!-- Logo Section Améliorée -->
			<section class="td-section">
				<h2>Logo</h2>
				<div class="logo-examples">
					<div class="logo-size-demo">
						<h3>Tailles disponibles</h3>
						<div class="logo-sizes">
							<div class="logo-item">
								<Logo size="xs" />
								<span class="logo-label">XS - 128px</span>
								<code>size="xs"</code>
							</div>
							<div class="logo-item">
								<Logo size="sm" />
								<span class="logo-label">SM - 160px</span>
								<code>size="sm"</code>
							</div>
							<div class="logo-item">
								<Logo size="md" />
								<span class="logo-label">MD - 192px</span>
								<code>size="md" (défaut)</code>
							</div>
							<div class="logo-item">
								<Logo size="lg" />
								<span class="logo-label">LG - 224px</span>
								<code>size="lg"</code>
							</div>
							<div class="logo-item">
								<Logo size="xl" />
								<span class="logo-label">XL - 256px</span>
								<code>size="xl"</code>
							</div>
						</div>
					</div>

					<!-- Nouvelle section : Variantes de couleur -->
					<div class="logo-variants-demo">
						<h3>Variantes de couleur</h3>
						<div class="variants-grid">
							<div class="variant-item">
								<Logo size="lg" variant="default" />
								<span class="variant-label">Default</span>
								<code>variant="default"</code>
							</div>
							<div class="variant-item dark-background">
								<Logo size="lg" variant="light" />
								<span class="variant-label">Light</span>
								<code>variant="light"</code>
							</div>
							<div class="variant-item">
								<Logo size="lg" variant="dark" />
								<span class="variant-label">Dark</span>
								<code>variant="dark"</code>
							</div>
							<div class="variant-item">
								<Logo size="lg" variant="blue" />
								<span class="variant-label">Blue</span>
								<code>variant="blue"</code>
							</div>
							<div class="variant-item">
								<Logo size="lg" variant="orange" />
								<span class="variant-label">Orange</span>
								<code>variant="orange"</code>
							</div>
						</div>
					</div>

					<!-- Nouvelle section : Animations et effets -->
					<div class="logo-animations-demo">
						<h3>Animations et effets</h3>
						<div class="animations-grid">
							<div class="animation-item">
								<Logo size="lg" class="animate-pulse" />
								<span class="animation-label">Pulse</span>
								<code>class="animate-pulse"</code>
							</div>
							<div class="animation-item">
								<Logo size="lg" class="custom-hover-effect" />
								<span class="animation-label">Hover Effect</span>
								<code>class="custom-hover-effect"</code>
							</div>
							<div class="animation-item">
								<Logo size="lg" class="custom-shadow-effect" />
								<span class="animation-label">Shadow</span>
								<code>class="custom-shadow-effect"</code>
							</div>
						</div>
					</div>

					<div class="logo-code">
						<h3>Comment utiliser</h3>
						<div class="code-examples">
							<div class="code-block">
								<h4>Import du composant</h4>
								<pre><code>---
import Logo from '../components/Logo.astro';
---</code></pre>
							</div>
							<div class="code-block">
								<h4>Utilisation basique</h4>
								<pre><code>&lt;Logo /&gt;
&lt;Logo size="lg" /&gt;
&lt;Logo size="xl" variant="blue" /&gt;
&lt;Logo class="my-custom-class" /&gt;</code></pre>
							</div>
							<div class="code-block">
								<h4>Props disponibles</h4>
								<ul class="props-list">
									<li><strong>size:</strong> 'xs' | 'sm' | 'md' | 'lg' | 'xl' (défaut: 'md')</li>
									<li><strong>variant:</strong> 'default' | 'light' | 'dark' | 'blue' | 'orange' (défaut: 'default')</li>
									<li><strong>class:</strong> string - Classes CSS personnalisées</li>
								</ul>
							</div>
							<div class="code-block">
								<h4>Exemples d'usage contextuel</h4>
								<pre><code>// Header
&lt;Logo size="sm" variant="default" /&gt;

// Footer sur fond sombre
&lt;Logo size="xs" variant="light" /&gt;

// Page d'accueil
&lt;Logo size="xl" variant="default" /&gt;

// Avec animation
&lt;Logo size="lg" class="animate-pulse" /&gt;</code></pre>
							</div>
						</div>
					</div>

					<!-- Nouvelle section : Usage contextuel -->
					<div class="logo-context-demo">
						<h3>Usage contextuel</h3>
						
						<!-- Header demo -->
						<div class="context-example">
							<h4>Dans un header</h4>
							<div class="demo-header">
								<Logo size="sm" variant="default" />
								<nav class="demo-nav">
									<a href="#">Accueil</a>
									<a href="#">Services</a>
									<a href="#">Contact</a>
								</nav>
							</div>
						</div>

						<!-- Footer demo -->
						<div class="context-example">
							<h4>Dans un footer</h4>
							<div class="demo-footer">
								<div class="footer-content">
									<Logo size="xs" variant="light" />
									<p>© 2024 Notre entreprise. Tous droits réservés.</p>
								</div>
							</div>
						</div>

						<!-- Card demo -->
						<div class="context-example">
							<h4>Dans une carte</h4>
							<div class="demo-card">
								<Logo size="sm" variant="blue" />
								<h5>Notre service premium</h5>
								<p>Découvrez notre offre avec ce logo intégré dans le design de la carte.</p>
								<button class="td-btn td-btn-small td-btn-primary">En savoir plus</button>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Colors -->
			<section class="td-section">
				<h2>Couleurs</h2>
				<div class="color-grid">
					<div class="color-card">
						<div class="color-sample color-background"></div>
						<div class="color-info">
							<h3>Background</h3>
							<code>--color-background</code>
							<span class="color-value">#faf5dd</span>
							<span class="color-description">Couleur de fond principale du site</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-text"></div>
						<div class="color-info">
							<h3>Text Primary</h3>
							<code>--color-text</code>
							<span class="color-value">#222222</span>
							<span class="color-description">Couleur principale pour la typographie</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-text-light"></div>
						<div class="color-info">
							<h3>Text Light</h3>
							<code>--color-text-light</code>
							<span class="color-value">#444444</span>
							<span class="color-description">Couleur pour les textes secondaires</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-tertiary"></div>
						<div class="color-info">
							<h3>Tertiary</h3>
							<code>--color-tertiary</code>
							<span class="color-value">#1669B6</span>
							<span class="color-description">Couleur d'accentuation bleue (utilisée dans le logo)</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-highlight"></div>
						<div class="color-info">
							<h3>Highlight</h3>
							<code>--color-highlight</code>
							<span class="color-value">#FF5C33</span>
							<span class="color-description">Couleur pour les éléments importants (variante orange du logo)</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-surface"></div>
						<div class="color-info">
							<h3>Surface</h3>
							<code>--color-surface</code>
							<span class="color-value">rgba(255,255,255,0.8)</span>
							<span class="color-description">Couleur des cartes et surfaces</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-success"></div>
						<div class="color-info">
							<h3>Success</h3>
							<code>--color-success</code>
							<span class="color-value">#10b981</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-warning"></div>
						<div class="color-info">
							<h3>Warning</h3>
							<code>--color-warning</code>
							<span class="color-value">#f59e0b</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-danger"></div>
						<div class="color-info">
							<h3>Danger</h3>
							<code>--color-danger</code>
							<span class="color-value">#ef4444</span>
						</div>
					</div>
				</div>
			</section>

			<!-- Typography -->
			<section class="td-section">
				<h2>Typographie</h2>
				<div class="typography-samples">
					<div class="type-sample">
						<h1>Heading 1</h1>
						<code>h1, .h1</code>
					</div>
					<div class="type-sample">
						<h2>Heading 2</h2>
						<code>h2, .h2</code>
					</div>
					<div class="type-sample">
						<h3>Heading 3</h3>
						<code>h3, .h3</code>
					</div>
					<div class="type-sample">
						<h4>Heading 4</h4>
						<code>h4, .h4</code>
					</div>
					<div class="type-sample">
						<p>Body text - Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
						<code>p, .body</code>
					</div>
					<div class="type-sample">
						<small>Small text - Informations complémentaires</small>
						<code>small, .small</code>
					</div>
				</div>
			</section>

			<!-- Buttons -->
			<section class="td-section">
				<h2>Boutons</h2>

				<div class="component-example">
					<div class="td-button-group">
						<h3>Primary Buttons</h3>
						<button class="td-btn td-btn-primary">Button primary</button>
						<button class="td-btn td-btn-primary" disabled>Button primary disabled</button>
					</div>
					<div class="td-button-group">
						<h3>Secondary Buttons</h3>
						<button class="td-btn td-btn-secondary">Button secondary</button>
						<button class="td-btn td-btn-secondary" disabled>Button secondary disabled</button>
					</div>
					<div class="td-button-group">
						<h3>Tertiary Buttons</h3>
						<button class="td-btn td-btn-tertiary">Button tertiary</button>
						<button class="td-btn td-btn-tertiary td-btn-outline">Button tertiary outline</button>
						<button class="td-btn td-btn-tertiary" disabled>Button tertiary disabled</button>
					</div>
					<div class="td-button-group">
						<h3>Highlight Buttons</h3>
						<button class="td-btn td-btn-highlight">Button highlight</button>
						<button class="td-btn td-btn-highlight td-btn-outline">Button highlight outline</button>
						<button class="td-btn td-btn-highlight" disabled>Button highlight disabled</button>
					</div>
					<div class="td-button-group">
						<h3>Success Buttons</h3>
						<button class="td-btn td-btn-success">Button success</button>
						<button class="td-btn td-btn-success td-btn-outline">Button success outline</button>
						<button class="td-btn td-btn-success" disabled>Button success disabled</button>
					</div>
					<div class="td-button-group">
						<h3>Warning Buttons</h3>
						<button class="td-btn td-btn-warning">Button warning</button>
						<button class="td-btn td-btn-warning td-btn-outline">Button warning outline</button>
						<button class="td-btn td-btn-warning" disabled>Button warning disabled</button>
					</div>
					<div class="td-button-group">
						<h3>Danger Buttons</h3>
						<button class="td-btn td-btn-danger">Button danger</button>
						<button class="td-btn td-btn-danger td-btn-outline">Button danger outline</button>
						<button class="td-btn td-btn-danger" disabled>Button danger disabled</button>
					</div>
					
					<div class="td-button-group">
						<h3>Large Buttons</h3>
						<button class="td-btn td-btn-max td-btn-primary">Button primary</button>
						<button class="td-btn td-btn-max td-btn-primary" disabled>Button primary disabled</button>
						<button class="td-btn td-btn-max td-btn-secondary">Button secondary</button>
						<button class="td-btn td-btn-max td-btn-tertiary">Button tertiary</button>
						<button class="td-btn td-btn-max td-btn-highlight">Button highlight</button>
						<button class="td-btn td-btn-max td-btn-success">Button success</button>
						<button class="td-btn td-btn-max td-btn-warning">Button warning</button>
						<button class="td-btn td-btn-max td-btn-danger">Button danger</button>
					</div>
					
					<div class="td-button-group">
						<h3>Small Buttons</h3>
						<button class="td-btn td-btn-small td-btn-primary">Button primary</button>
						<button class="td-btn td-btn-small td-btn-primary" disabled>Button primary disabled</button>
						<button class="td-btn td-btn-small td-btn-secondary">Button secondary</button>
						<button class="td-btn td-btn-small td-btn-tertiary">Button tertiary</button>
						<button class="td-btn td-btn-small td-btn-success">Button success</button>
						<button class="td-btn td-btn-small td-btn-warning">Button warning</button>
						<button class="td-btn td-btn-small td-btn-danger">Button danger</button>
					</div>

				</div>
			</section>

			<!-- Form Elements -->
			<section class="td-section">
				<h2>Éléments de formulaire</h2>
				<div class="form-examples">
					<div class="form-group">
						<label for="input-text">Input Text</label>
						<input type="text" id="input-text" placeholder="Entrez votre texte" />
					</div>
					<div class="form-group">
						<label for="input-email">Input Email</label>
						<input type="email" id="input-email" placeholder="email@exemple.com" />
					</div>
					<div class="form-group">
						<label for="textarea">Textarea</label>
						<textarea id="textarea" placeholder="Votre message..."></textarea>
					</div>
					<div class="form-group">
						<label for="select">Select</label>
						<select id="select">
							<option>Option 1</option>
							<option>Option 2</option>
							<option>Option 3</option>
						</select>
					</div>
					<div class="form-group">
						<label class="checkbox-label">
							<input type="checkbox" />
							<span class="checkmark"></span>
							Checkbox
						</label>
					</div>
					<div class="form-group">
						<label class="radio-label">
							<input type="radio" name="radio" />
							<span class="radiomark"></span>
							Radio 1
						</label>
						<label class="radio-label">
							<input type="radio" name="radio" />
							<span class="radiomark"></span>
							Radio 2
						</label>
					</div>
				</div>
			</section>

			<!-- Cards -->
			<section class="td-section">
				<h2>Cartes</h2>
				<div class="card-examples">
					<div class="card">
						<div class="card-header">
							<h3>Carte basique</h3>
						</div>
						<div class="card-body">
							<p>Contenu de la carte avec du texte et des informations importantes.</p>
						</div>
						<div class="card-footer">
							<button class="td-btn td-btn-small td-btn-primary">Action</button>
						</div>
					</div>
					<div class="card card-elevated">
						<div class="card-header">
							<h3>Carte avec élévation</h3>
						</div>
						<div class="card-body">
							<p>Cette carte utilise une ombre plus prononcée pour créer un effet d'élévation.</p>
						</div>
					</div>
					<div class="card card-with-logo">
						<div class="card-header">
							<Logo size="xs" variant="blue" />
							<h3>Carte avec logo</h3>
						</div>
						<div class="card-body">
							<p>Exemple d'intégration du logo dans une carte pour renforcer l'identité visuelle.</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Spacing -->
			<section class="td-section">
				<h2>Espacement</h2>
				<div class="spacing-examples">
					<div class="spacing-demo">
						<h3>Variables d'espacement</h3>
						<div class="spacing-grid">
							<div class="spacing-item">
								<div class="spacing-box spacing-xs">XS - 4px</div>
								<code>var(--spacing-xs)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-sm">SM - 8px</div>
								<code>var(--spacing-sm)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-md">MD - 16px</div>
								<code>var(--spacing-md)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-lg">LG - 24px</div>
								<code>var(--spacing-lg)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-xl">XL - 32px</div>
								<code>var(--spacing-xl)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-2xl">2XL - 48px</div>
								<code>var(--spacing-2xl)</code>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Grid System -->
			<section class="td-section">
				<h2>Système de grille</h2>
				<div class="grid-examples">
					<div class="grid-example-item">
						<h3>Grille 2 colonnes</h3>
						<div class="grid grid-2">
							<div class="grid-item">1/2</div>
							<div class="grid-item">1/2</div>
						</div>
					</div>
					<div class="grid-example-item">
						<h3>Grille 3 colonnes</h3>
						<div class="grid grid-3">
							<div class="grid-item">1/3</div>
							<div class="grid-item">1/3</div>
							<div class="grid-item">1/3</div>
						</div>
					</div>
					<div class="grid-example-item">
						<h3>Grille 4 colonnes</h3>
						<div class="grid grid-4">
							<div class="grid-item">1/4</div>
							<div class="grid-item">1/4</div>
							<div class="grid-item">1/4</div>
							<div class="grid-item">1/4</div>
						</div>
					</div>
					<div class="grid-example-item">
						<h3>Grille responsive</h3>
						<div class="grid grid-responsive">
							<div class="grid-item">Auto</div>
							<div class="grid-item">Auto</div>
							<div class="grid-item">Auto</div>
							<div class="grid-item">Auto</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Shadows & Effects -->
			<section class="td-section">
				<h2>Ombres et effets</h2>
				<div class="shadow-examples">
					<div class="shadow-card shadow-sm">
						<h4>Small</h4>
						<code>var(--shadow-sm)</code>
					</div>
					<div class="shadow-card shadow-md">
						<h4>Medium</h4>
						<code>var(--shadow-md)</code>
					</div>
					<div class="shadow-card shadow-lg">
						<h4>Large</h4>
						<code>var(--shadow-lg)</code>
					</div>
				</div>
			</section>

		</main>

		<!-- Footer -->
		<footer class="td-footer">
			<div class="td-container">
				<Logo size="xs" variant="default" />
				<div class="footer-info">
					<p><strong>Design System - Version 2.0</strong></p>
					<p class="footer-note">Mise à jour avec le nouveau composant Logo SVG inline. Toutes les variantes et animations sont maintenant disponibles.</p>
				</div>
		 	</div>
		</footer>

		<style>
			/* CSS Variables */
			:root {
				--color-primary: #222222;
				--color-secondary: #faf5dd;
				--color-tertiary: #1669B6;
				--color-highlight: #FF5C33;
				--color-success: #10b981;
				--color-warning: #f59e0b;
				--color-danger: #ef4444;

				/* Nouvelles couleurs principales */
				--color-background: #faf5dd;
				--color-text: #222222;
				--color-text-light: #444444;
				--color-surface: rgba(255, 255, 255, 0.8);
				--color-surface-hover: rgba(255, 255, 255, 0.9);
				--color-border: rgba(34, 34, 34, 0.1);

				--font-family-base: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				--font-family-mono: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;

				--font-size-xs: 0.75rem;
				--font-size-sm: 0.875rem;
				--font-size-base: 1rem;
				--font-size-lg: 1.125rem;
				--font-size-xl: 1.25rem;
				--font-size-2xl: 1.5rem;
				--font-size-3xl: 1.875rem;
				--font-size-4xl: 2.25rem;

				--spacing-xs: 0.25rem;
				--spacing-sm: 0.5rem;
				--spacing-md: 1rem;
				--spacing-lg: 1.5rem;
				--spacing-xl: 2rem;
				--spacing-2xl: 3rem;

				--border-radius-sm: 0.25rem;
				--border-radius-md: 0.5rem;
				--border-radius-lg: 0.75rem;

				--shadow-sm: 0 1px 2px 0 rgb(34 34 34 / 0.05);
				--shadow-md: 0 4px 6px -1px rgb(34 34 34 / 0.1), 0 2px 4px -2px rgb(34 34 34 / 0.1);
				--shadow-lg: 0 10px 15px -3px rgb(34 34 34 / 0.1), 0 4px 6px -4px rgb(34 34 34 / 0.1);
			}

			/* Reset & Base Styles */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				height: 100%;
			}

			body {
				font-family: var(--font-family-base);
				line-height: 1.6;
				color: var(--color-text);
				background-color: var(--color-background);
				min-height: 100vh;
			}

			h1, h2, h3, h4, h5, h6 {
				color: var(--color-text);
			}

			/* Layout */
			.main {
				max-width: 1200px;
				margin: 0 auto;
				padding: var(--spacing-xl);
			}

			.td-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: var(--spacing-lg);
			}

			.td-header {
				text-align: left;
				margin-bottom: var(--spacing-2xl);
			}

			.subtitle {
				color: var(--color-text-light);
				font-size: var(--font-size-lg);
				margin-top: var(--spacing-sm);
			}

			.td-section {
				margin: var(--spacing-xl) 0 var(--spacing-2xl) 0;
			}

			.td-section h2 {
				font-size: var(--font-size-2xl);
				margin-bottom: var(--spacing-xl);
				color: var(--color-text);
			}

			/* Logo Styles - Section améliorée */
			.logo-examples {
				display: flex;
				flex-direction: column;
				gap: var(--spacing-2xl);
			}

			.logo-size-demo,
			.logo-variants-demo,
			.logo-animations-demo,
			.logo-context-demo,
			.logo-code {
				background: var(--color-surface);
				padding: var(--spacing-xl);
				border-radius: var(--border-radius-lg);
				box-shadow: var(--shadow-sm);
			}

			.logo-size-demo h3,
			.logo-variants-demo h3,
			.logo-animations-demo h3,
			.logo-context-demo h3,
			.logo-code h3 {
				margin-bottom: var(--spacing-lg);
				font-size: var(--font-size-lg);
				color: var(--color-text);
			}

			.logo-sizes,
			.variants-grid,
			.animations-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: var(--spacing-xl);
				align-items: center;
			}

			.logo-item,
			.variant-item,
			.animation-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: var(--spacing-sm);
				text-align: center;
				padding: var(--spacing-md);
				border-radius: var(--border-radius-md);
				transition: transform 0.2s ease;
			}

			.logo-item:hover,
			.variant-item:hover,
			.animation-item:hover {
				transform: translateY(-2px);
				box-shadow: var(--shadow-md);
			}

			.variant-item.dark-background {
				background: #333;
				color: white;
			}

			.logo-label,
			.variant-label,
			.animation-label {
				font-size: var(--font-size-sm);
				font-weight: 500;
				color: var(--color-text);
			}

			.dark-background .variant-label {
				color: white;
			}

			.logo-item code,
			.variant-item code,
			.animation-item code,
			.code-block code {
				font-family: var(--font-family-mono);
				font-size: var(--font-size-xs);
				color: var(--color-text-light);
				background: rgba(255, 255, 255, 0.5);
				padding: var(--spacing-xs);
				border-radius: var(--border-radius-sm);
			}

			.dark-background code {
				background: rgba(255, 255, 255, 0.2);
				color: rgba(255, 255, 255, 0.8);
			}

			/* Classes personnalisées pour les animations */
			:global(.custom-hover-effect) {
				transition: all 0.3s ease;
			}

			:global(.custom-hover-effect:hover) {
				transform: scale(1.1) rotate(2deg);
				filter: brightness(1.1);
			}

			:global(.custom-shadow-effect) {
				filter: drop-shadow(0 4px 12px rgba(22, 105, 182, 0.3));
			}

			/* Context demo styles */
			.context-example {
				margin: var(--spacing-lg) 0;
				padding: var(--spacing-md);
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-md);
				background: rgba(255, 255, 255, 0.3);
			}

			.context-example h4 {
				margin-bottom: var(--spacing-sm);
				color: var(--color-text);
				font-size: var(--font-size-base);
			}

			.demo-header {
				display: flex;
				align-items: center;
				justify-content: space-between;
				padding: var(--spacing-md);
				background: white;
				border-radius: var(--border-radius-md);
				box-shadow: var(--shadow-sm);
			}

			.demo-nav {
				display: flex;
				gap: var(--spacing-md);
			}

			.demo-nav a {
				text-decoration: none;
				color: var(--color-text);
				font-weight: 500;
				transition: color 0.2s ease;
			}

			.demo-nav a:hover {
				color: var(--color-tertiary);
			}

			.demo-footer {
				background: #333;
				border-radius: var(--border-radius-md);
				overflow: hidden;
			}

			.demo-footer .footer-content {
				display: flex;
				align-items: center;
				justify-content: space-between;
				padding: var(--spacing-lg);
				color: white;
			}

			.demo-card {
				background: white;
				padding: var(--spacing-lg);
				border-radius: var(--border-radius-md);
				box-shadow: var(--shadow-md);
				text-align: center;
				max-width: 320px;
				margin: 0 auto;
				transition: transform 0.2s ease;
			}

			.demo-card:hover {
				transform: translateY(-2px);
				box-shadow: var(--shadow-lg);
			}

			.demo-card h5 {
				margin: var(--spacing-sm) 0;
				color: var(--color-text);
			}

			.demo-card p {
				color: var(--color-text-light);
				margin-bottom: var(--spacing-md);
				line-height: 1.6;
			}

			.code-examples {
				display: grid;
				gap: var(--spacing-lg);
			}

			.code-block {
				background: rgba(255, 255, 255, 0.3);
				padding: var(--spacing-md);
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-md);
			}

			.code-block h4 {
				margin-bottom: var(--spacing-sm);
				font-size: var(--font-size-base);
				color: var(--color-text);
			}

			.code-block pre {
				background: var(--color-text);
				color: var(--color-background);
				padding: var(--spacing-md);
				overflow-x: auto;
				font-family: var(--font-family-mono);
				font-size: var(--font-size-sm);
				line-height: 1.5;
				border-radius: var(--border-radius-sm);
			}

			.props-list {
				list-style: none;
				padding: 0;
			}

			.props-list li {
				padding: var(--spacing-xs) 0;
				font-family: var(--font-family-mono);
				font-size: var(--font-size-sm);
				color: var(--color-text);
			}

			.props-list strong {
				color: var(--color-tertiary);
			}

			/* Colors */
			.color-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: var(--spacing-md);
			}

			.color-card {
				background: var(--color-surface);
				padding: var(--spacing-md);
				box-shadow: var(--shadow-sm);
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-md);
			}

			.color-sample {
				height: 80px;
				margin-bottom: var(--spacing-sm);
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-sm);
			}

			.color-background { background-color: var(--color-background); }
			.color-text { background-color: var(--color-text); }
			.color-text-light { background-color: var(--color-text-light); }
			.color-tertiary { background-color: var(--color-tertiary); }
			.color-highlight { background-color: var(--color-highlight); }
			.color-surface { background-color: var(--color-surface); }
			.color-success { background-color: var(--color-success); }
			.color-warning { background-color: var(--color-warning); }
			.color-danger { background-color: var(--color-danger); }

			.color-info h3 {
				font-size: var(--font-size-base);
				margin-bottom: var(--spacing-xs);
				color: var(--color-text);
			}

			.color-info code {
				display: block;
				font-family: var(--font-family-mono);
				font-size: var(--font-size-sm);
				color: var(--color-text-light);
				margin-bottom: var(--spacing-xs);
				background: rgba(255, 255, 255, 0.5);
				padding: var(--spacing-xs);
				border-radius: var(--border-radius-sm);
			}

			.color-value {
				font-size: var(--font-size-sm);
				color: var(--color-text-light);
				font-family: var(--font-family-mono);
				display: block;
				margin-bottom: var(--spacing-xs);
			}

			.color-description {
				font-size: var(--font-size-xs);
				color: var(--color-text-light);
				font-style: italic;
			}

			/* Typography */
			.typography-samples {
				display: flex;
				flex-direction: column;
				gap: var(--spacing-md);
			}

			.type-sample {
				display: flex;
				align-items: center;
				gap: var(--spacing-lg);
				padding: var(--spacing-md);
				background: var(--color-surface);
				box-shadow: var(--shadow-sm);
				border-radius: var(--border-radius-md);
			}

			.type-sample > *:first-child {
				flex: 1;
				margin: 0;
				color: var(--color-text);
			}

			.type-sample code {
				font-family: var(--font-family-mono);
				font-size: var(--font-size-sm);
				color: var(--color-text-light);
				background: rgba(255, 255, 255, 0.5);
				padding: var(--spacing-xs) var(--spacing-sm);
				border-radius: var(--border-radius-sm);
			}

			/* Component Styles */
			.component-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: var(--spacing-lg);
			}

			.component-example {
				background: var(--color-surface);
				padding: var(--spacing-lg);
				box-shadow: var(--shadow-sm);
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-md);
			}

			.component-example h3 {
				margin-bottom: var(--spacing-md);
				font-size: var(--font-size-base);
				color: var(--color-text);
			}

			/* Buttons */
			@media (pointer: fine) {
				.td-btn {
					transform-style: preserve-3d;
				}

				.td-btn::before {
					content: "";
					position: absolute;
					z-index: -10;
					top: -0.1rem;
					right: -0.1rem;
					bottom: -0.1rem;
					left: -0.1rem;
					transform: translateZ(-0.1rem);
					border: 0.1rem solid var(--btn-bordercolor);
					transition: 250ms ease;
					border-radius: inherit;
				}
				
				.td-btn:hover::before, .td-btn:focus::before {
					transform: translateZ(-0.1rem) translate(1rem, 1rem);
				}

				.td-btn-secondary:hover::before {
					--btn-color: #222222;
					--btn-bgcolor: transparent;
					color: var(--btn-color);
					background-color: var(--btn-bgcolor);
				}
			}

			.td-btn {    
				--btn-padding: 1rem 1.5rem;
				--btn-color: #fff;
				--btn-bgcolor: #222222;
				--btn-bordercolor: #222222;
				--btn-offset-bordercolor: #222222;
				--btn-offset-bgcolor: transparent;
				position: relative;
				z-index: 10;
				display: inline-block;
				padding: var(--btn-padding);
				margin-bottom: 1em;
				color: var(--btn-color);
				border: 0.1rem solid var(--btn-bordercolor);
				background-color: var(--btn-bgcolor);
				text-align: center;
				text-decoration: none;
				font-size: var(--font-size-base);
				line-height: 1;
				cursor: pointer;
				border-radius: var(--border-radius-sm);
				transition: all 0.2s ease;
			}

			.td-btn:disabled {
				opacity: 0.4;
				cursor: not-allowed;
			}

			.td-btn:disabled::before {
				display: none;
			}

			.td-btn-max {
				--btn-padding: 1.5rem 2.5rem;
				padding: var(--btn-padding);
				font-size: var(--font-size-lg);
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}

			.td-btn-primary {
				--btn-color: #faf5dd;
				--btn-bgcolor: #222222;
				--btn-bordercolor: #222222;
				color: var(--btn-color);
				border: 0.1rem solid var(--btn-bordercolor);
				background-color: var(--btn-bgcolor);
			}

			.td-btn-secondary {
				--btn-color: #222222;
				--btn-bgcolor: #ffffff;
				--btn-bordercolor: #222222;
			}

			.td-btn-tertiary {
				--btn-color: #faf5dd;
				--btn-bgcolor: #1669B6;
				--btn-bordercolor: #1669B6;
			}

			.td-btn-tertiary.td-btn-outline  {
				--btn-color: #1669B6;
				--btn-bgcolor: #ffffff;
				--btn-bordercolor: #1669B6;
			}

			.td-btn-highlight {
				--btn-color: #faf5dd;
				--btn-bgcolor: #FF5C33;
				--btn-bordercolor: #FF5C33;
			}

			.td-btn-highlight.td-btn-outline {
				--btn-color: #FF5C33;
				--btn-bgcolor: #ffffff;
				--btn-bordercolor: #FF5C33;
			}

			.td-btn-success {
				--btn-color: #faf5dd;
				--btn-bgcolor: #10b981;
				--btn-bordercolor: #10b981;
			}

			.td-btn-success.td-btn-outline  {
				--btn-color: #10b981;
				--btn-bgcolor: #ffffff;
				--btn-bordercolor: #10b981;
			}

			.td-btn-warning {
				--btn-color: #faf5dd;
				--btn-bgcolor: #f59e0b;
				--btn-bordercolor: #f59e0b;
			}

			.td-btn-warning.td-btn-outline {
				--btn-color: #f59e0b;
				--btn-bgcolor: #ffffff;
				--btn-bordercolor: #f59e0b;
			}

			.td-btn-danger {
				--btn-color: #faf5dd;
				--btn-bgcolor: #ef4444;
				--btn-bordercolor: #ef4444;
			}

			.td-btn-danger.td-btn-outline {
				--btn-color: #ef4444;
				--btn-bgcolor: #ffffff;
				--btn-bordercolor: #ef4444;
			}

			.td-btn-small  {
				--btn-padding: 0.75rem 1rem;
				font-size: var(--font-size-sm);
				padding: var(--btn-padding);
			}

			.td-button-group {
				display: flex;
				gap: var(--spacing-md);
				margin: var(--spacing-md) 0;
				flex-wrap: wrap;
			}

			.td-button-group h3 {
				width: 100%;
				font-size: var(--font-size-lg);
				color: var(--color-text);
				margin-bottom: var(--spacing-sm);
			}

			/* Forms */
			.form-examples {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: var(--spacing-lg);
				background: var(--color-surface);
				padding: var(--spacing-xl);
				box-shadow: var(--shadow-sm);
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-md);
			}

			.form-group {
				display: flex;
				flex-direction: column;
				gap: var(--spacing-xs);
			}

			.form-group label {
				font-weight: 500;
				color: var(--color-text);
			}

			input[type="text"],
			input[type="email"],
			input[type="password"],
			textarea,
			select {
				padding: var(--spacing-sm);
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-sm);
				font-size: var(--font-size-base);
				transition: border-color 0.2s ease, box-shadow 0.2s ease;
				background-color: rgba(255, 255, 255, 0.8);
				color: var(--color-text);
			}

			input:focus,
			textarea:focus,
			select:focus {
				outline: none;
				border-color: var(--color-tertiary);
				box-shadow: 0 0 0 3px rgb(22 105 182 / 0.1);
				background-color: rgba(255, 255, 255, 0.9);
			}

			textarea {
				resize: vertical;
				min-height: 80px;
			}

			.checkbox-label,
			.radio-label {
				display: flex;
				align-items: center;
				gap: var(--spacing-xs);
				cursor: pointer;
				color: var(--color-text);
			}

			.checkmark,
			.radiomark {
				width: 18px;
				height: 18px;
				border: 2px solid var(--color-border);
				display: inline-block;
				position: relative;
				background-color: rgba(255, 255, 255, 0.8);
				transition: all 0.2s ease;
				border-radius: var(--border-radius-sm);
			}

			.radiomark {
				border-radius: 50%;
			}

			input[type="checkbox"],
			input[type="radio"] {
				display: none;
			}

			input[type="checkbox"]:checked + .checkmark {
				background-color: var(--color-tertiary);
				border-color: var(--color-tertiary);
			}

			input[type="checkbox"]:checked + .checkmark::after {
				content: '✓';
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				color: white;
				font-size: 12px;
				font-weight: bold;
			}

			input[type="radio"]:checked + .radiomark {
				background-color: var(--color-tertiary);
				border-color: var(--color-tertiary);
			}

			input[type="radio"]:checked + .radiomark::after {
				content: '';
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				width: 6px;
				height: 6px;
				border-radius: 50%;
				background-color: white;
			}

			/* Cards */
			.card-examples {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: var(--spacing-lg);
			}

			.card {
				background: var(--color-surface);
				box-shadow: var(--shadow-sm);
				overflow: hidden;
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-md);
				transition: all 0.2s ease;
			}

			.card:hover {
				transform: translateY(-2px);
				box-shadow: var(--shadow-md);
			}

			.card-elevated {
				box-shadow: var(--shadow-lg);
			}

			.card-elevated:hover {
				box-shadow: var(--shadow-lg);
				transform: translateY(-4px);
			}

			.card-with-logo .card-header {
				display: flex;
				align-items: center;
				gap: var(--spacing-sm);
			}

			.card-header {
				padding: var(--spacing-lg);
				border-bottom: 1px solid var(--color-border);
				background: rgba(255, 255, 255, 0.3);
			}

			.card-header h3 {
				margin: 0;
				font-size: var(--font-size-lg);
				color: var(--color-text);
			}

			.card-body {
				padding: var(--spacing-lg);
			}

			.card-body p {
				color: var(--color-text-light);
				margin: 0;
				line-height: 1.6;
			}

			.card-footer {
				padding: var(--spacing-lg);
				border-top: 1px solid var(--color-border);
				background: rgba(255, 255, 255, 0.3);
			}

			/* Spacing Demo Styles */
			.spacing-examples {
				background: var(--color-surface);
				padding: var(--spacing-xl);
				box-shadow: var(--shadow-sm);
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-md);
			}

			.spacing-examples h3 {
				margin-bottom: var(--spacing-lg);
				color: var(--color-text);
			}

			.spacing-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: var(--spacing-lg);
			}

			.spacing-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: var(--spacing-sm);
				text-align: center;
			}

			.spacing-box {
				background: var(--color-tertiary);
				color: white;
				display: flex;
				align-items: center;
				justify-content: center;
				font-size: var(--font-size-sm);
				font-weight: 500;
				min-height: 50px;
				width: 100%;
				border-radius: var(--border-radius-sm);
			}

			.spacing-xs { padding: var(--spacing-xs); }
			.spacing-sm { padding: var(--spacing-sm); }
			.spacing-md { padding: var(--spacing-md); }
