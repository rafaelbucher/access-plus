						<div class="td-button-group">
							<h3>Small Buttons</h3>
							<button class="td-btn td-btn-small td-btn-primary">Button primary</button>
							<button class="td-btn td-btn-small td-btn-primary" disabled>Button primary disabled</button>
							<button class="td-btn td-btn-small td-btn-secondary">Button secondary</button>
							<button class="td-btn td-btn-small td-btn-tertiary">Button tertiary</button>
							<button class="td-btn td-btn-small td-btn-success">Button success</button>
							<button class="td-btn td-btn-small td-btn-warning">Button warning</button>
							<button class="td-btn td-btn-small td-btn-danger">Button danger</button>
						</div>
					</div>
				</section>

				<!-- Form Elements -->
				<section class="td-section" id="formulaires">
					<h2>Éléments de formulaire</h2>
					<div class="form-examples">
						<div class="form-group">
							<label for="input-text">Input Text</label>
							<input type="text" id="input-text" placeholder="Entrez votre texte" />
						</div>
						<div class="form-group">
							<label for="input-email">Input Email</label>
							<input type="email" id="input-email" placeholder="email@exemple.com" />
						</div>
						<div class="form-group">
							<label for="textarea">Textarea</label>
							<textarea id="textarea" placeholder="Votre message..."></textarea>
						</div>
						<div class="form-group">
							<label for="select">Select</label>
							<select id="select">
								<option>Option 1</option>
								<option>Option 2</option>
								<option>Option 3</option>
							</select>
						</div>
						<div class="form-group">
							<label class="checkbox-label">
								<input type="checkbox" />
								<span class="checkmark"></span>
								Checkbox
							</label>
						</div>
						<div class="form-group">
							<label class="radio-label">
								<input type="radio" name="radio" />
