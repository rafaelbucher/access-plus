								<div class="spacing-item">
									<div class="spacing-box spacing-xl">XL - 32px</div>
									<code>var(--spacing-xl)</code>
								</div>
								<div class="spacing-item">
									<div class="spacing-box spacing-2xl">2XL - 48px</div>
									<code>var(--spacing-2xl)</code>
								</div>
							</div>
						</div>
					</div>
				</section>

				<!-- Grid System -->
				<section class="td-section" id="grille">
					<h2>Système de grille</h2>
					<div class="grid-examples">
						<div class="grid-example-item">
							<h3>Grille 2 colonnes</h3>
