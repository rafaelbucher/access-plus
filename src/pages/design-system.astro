---
// src/pages/design-system.astro
import Logo from '../components/Logo.astro';
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Design System - Astro</title>
	</head>
	<body>
		<div class="container">
			<header class="header">
				<h1>Design System</h1>
				<p class="subtitle">Guide des composants et styles utilisés dans le projet</p>
			</header>

			<!-- Logo -->
			<section class="section">
				<h2>Logo</h2>
				<div class="logo-examples">
					<div class="logo-size-demo">
						<h3>Tailles disponibles</h3>
						<div class="logo-sizes">
							<div class="logo-item">
								<Logo size="xs" />
								<span class="logo-label">XS - 16px</span>
								<code>size="xs"</code>
							</div>
							<div class="logo-item">
								<Logo size="sm" />
								<span class="logo-label">SM - 24px</span>
								<code>size="sm"</code>
							</div>
							<div class="logo-item">
								<Logo size="md" />
								<span class="logo-label">MD - 32px</span>
								<code>size="md" (défaut)</code>
							</div>
							<div class="logo-item">
								<Logo size="lg" />
								<span class="logo-label">LG - 48px</span>
								<code>size="lg"</code>
							</div>
							<div class="logo-item">
								<Logo size="xl" />
								<span class="logo-label">XL - 64px</span>
								<code>size="xl"</code>
							</div>
						</div>
					</div>

					<div class="logo-variant-demo">
						<h3>Variantes</h3>
						<div class="logo-variants">
							<div class="logo-variant-item">
								<div class="logo-background light">
									<Logo size="lg" variant="default" />
								</div>
								<span class="logo-label">Version par défaut</span>
								<code>variant="default"</code>
							</div>
							<div class="logo-variant-item">
								<div class="logo-background dark">
									<Logo size="lg" variant="negative" />
								</div>
								<span class="logo-label">Version négative</span>
								<code>variant="negative"</code>
							</div>
						</div>
					</div>

					<div class="logo-usage">
						<h3>Exemples d'utilisation</h3>
						<div class="usage-examples">
							<div class="usage-example">
								<h4>Dans une navigation</h4>
								<div class="nav-example">
									<Logo size="sm" />
									<span>MonSite</span>
									<nav>
										<a href="#">Accueil</a>
										<a href="#">Produits</a>
										<a href="#">Contact</a>
									</nav>
								</div>
							</div>
							<div class="usage-example">
								<h4>Sur fond sombre</h4>
								<div class="dark-example">
									<Logo size="md" variant="negative" />
									<p>Version blanche pour les arrière-plans sombres</p>
								</div>
							</div>
							<div class="usage-example">
								<h4>Avec classes personnalisées</h4>
								<div class="custom-example">
									<Logo size="lg" class="custom-logo" />
									<p>Logo avec classes CSS personnalisées</p>
								</div>
							</div>
						</div>
					</div>

					<div class="logo-code">
						<h3>Comment utiliser</h3>
						<div class="code-examples">
							<div class="code-block">
								<h4>Import du composant</h4>
								<pre><code>---
import Logo from '../components/Logo.astro';
---</code></pre>
							</div>
							<div class="code-block">
								<h4>Utilisation basique</h4>
								<pre><code>&lt;Logo /&gt;
&lt;Logo size="lg" /&gt;
&lt;Logo variant="negative" /&gt;
&lt;Logo size="xl" variant="negative" class="my-logo" /&gt;</code></pre>
							</div>
							<div class="code-block">
								<h4>Props disponibles</h4>
								<ul class="props-list">
									<li><strong>size:</strong> 'xs' | 'sm' | 'md' | 'lg' | 'xl' (défaut: 'md')</li>
									<li><strong>variant:</strong> 'default' | 'negative' (défaut: 'default')</li>
									<li><strong>class:</strong> string - Classes CSS personnalisées</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Colors -->
			<section class="section">
				<h2>Couleurs</h2>
				<div class="color-grid">
					<div class="color-card">
						<div class="color-sample color-primary"></div>
						<div class="color-info">
							<h3>Primary</h3>
							<code>--color-primary</code>
							<span class="color-value">#222222</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-secondary"></div>
						<div class="color-info">
							<h3>Secondary</h3>
							<code>--color-secondary</code>
							<span class="color-value">#FFE9D6</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-tertiary"></div>
						<div class="color-info">
							<h3>Tertiary</h3>
							<code>--color-tertiary</code>
							<span class="color-value">#1669B6</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-highlight"></div>
						<div class="color-info">
							<h3>Highlight</h3>
							<code>--color-highlight</code>
							<span class="color-value">#FF5C33</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-success"></div>
						<div class="color-info">
							<h3>Success</h3>
							<code>--color-success</code>
							<span class="color-value">#10b981</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-warning"></div>
						<div class="color-info">
							<h3>Warning</h3>
							<code>--color-warning</code>
							<span class="color-value">#f59e0b</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-danger"></div>
						<div class="color-info">
							<h3>Danger</h3>
							<code>--color-danger</code>
							<span class="color-value">#ef4444</span>
						</div>
					</div>
				</div>
			</section>

			<!-- Typography -->
			<section class="section">
				<h2>Typographie</h2>
				<div class="typography-samples">
					<div class="type-sample">
						<h1>Heading 1</h1>
						<code>h1, .h1</code>
					</div>
					<div class="type-sample">
						<h2>Heading 2</h2>
						<code>h2, .h2</code>
					</div>
					<div class="type-sample">
						<h3>Heading 3</h3>
						<code>h3, .h3</code>
					</div>
					<div class="type-sample">
						<h4>Heading 4</h4>
						<code>h4, .h4</code>
					</div>
					<div class="type-sample">
						<p>Body text - Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
						<code>p, .body</code>
					</div>
					<div class="type-sample">
						<small>Small text - Informations complémentaires</small>
						<code>small, .small</code>
					</div>
				</div>
			</section>

			<!-- Buttons -->
			<section class="section">
				<h2>Boutons</h2>
				<div class="component-grid">
					<div class="component-example">
						<h3>Primary</h3>
						<div class="button-group">
							<button class="btn btn-primary">Button</button>
							<button class="btn btn-primary" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Secondary</h3>
						<div class="button-group">
							<button class="btn btn-secondary">Button</button>
							<button class="btn btn-secondary" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Tertiary</h3>
						<div class="button-group">
							<button class="btn btn-tertiary">Button</button>
							<button class="btn btn-tertiary" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Highlight</h3>
						<div class="button-group">
							<button class="btn btn-highlight">Button</button>
							<button class="btn btn-highlight" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Outline</h3>
						<div class="button-group">
							<button class="btn btn-outline">Button</button>
							<button class="btn btn-outline" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Ghost</h3>
						<div class="button-group">
							<button class="btn btn-ghost">Button</button>
							<button class="btn btn-ghost" disabled>Disabled</button>
						</div>
					</div>
				</div>
			</section>

			<!-- Form Elements -->
			<section class="section">
				<h2>Éléments de formulaire</h2>
				<div class="form-examples">
					<div class="form-group">
						<label for="input-text">Input Text</label>
						<input type="text" id="input-text" placeholder="Entrez votre texte" />
					</div>
					<div class="form-group">
						<label for="input-email">Input Email</label>
						<input type="email" id="input-email" placeholder="email@exemple.com" />
					</div>
					<div class="form-group">
						<label for="textarea">Textarea</label>
						<textarea id="textarea" placeholder="Votre message..."></textarea>
					</div>
					<div class="form-group">
						<label for="select">Select</label>
						<select id="select">
							<option>Option 1</option>
							<option>Option 2</option>
							<option>Option 3</option>
						</select>
					</div>
					<div class="form-group">
						<label class="checkbox-label">
							<input type="checkbox" />
							<span class="checkmark"></span>
							Checkbox
						</label>
					</div>
					<div class="form-group">
						<label class="radio-label">
							<input type="radio" name="radio" />
							<span class="radiomark"></span>
							Radio 1
						</label>
						<label class="radio-label">
							<input type="radio" name="radio" />
							<span class="radiomark"></span>
							Radio 2
						</label>
					</div>
				</div>
			</section>

			<!-- Cards -->
			<section class="section">
				<h2>Cartes</h2>
				<div class="card-examples">
					<div class="card">
						<div class="card-header">
							<h3>Carte basique</h3>
						</div>
						<div class="card-body">
							<p>Contenu de la carte avec du texte et des informations importantes.</p>
						</div>
						<div class="card-footer">
							<button class="btn btn-primary btn-small">Action</button>
						</div>
					</div>
					<div class="card card-elevated">
						<div class="card-header">
							<h3>Carte avec élévation</h3>
						</div>
						<div class="card-body">
							<p>Cette carte utilise une ombre plus prononcée pour créer un effet d'élévation.</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Spacing -->
			<section class="section">
				<h2>Espacement</h2>
				<div class="spacing-examples">
					<div class="spacing-demo">
						<h3>Margins & Padding</h3>
						<div class="spacing-grid">
							<div class="spacing-item">
								<div class="box m-xs">m-xs (4px)</div>
							</div>
							<div class="spacing-item">
								<div class="box m-sm">m-sm (8px)</div>
							</div>
							<div class="spacing-item">
								<div class="box m-md">m-md (16px)</div>
							</div>
							<div class="spacing-item">
								<div class="box m-lg">m-lg (24px)</div>
							</div>
							<div class="spacing-item">
								<div class="box m-xl">m-xl (32px)</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Grid System -->
			<section class="section">
				<h2>Système de grille</h2>
				<div class="grid-examples">
					<div class="grid grid-2">
						<div class="grid-item">1/2</div>
						<div class="grid-item">1/2</div>
					</div>
					<div class="grid grid-3">
						<div class="grid-item">1/3</div>
						<div class="grid-item">1/3</div>
						<div class="grid-item">1/3</div>
					</div>
					<div class="grid grid-4">
						<div class="grid-item">1/4</div>
						<div class="grid-item">1/4</div>
						<div class="grid-item">1/4</div>
						<div class="grid-item">1/4</div>
					</div>
				</div>
			</section>
		</div>

		<style>
			/* CSS Variables */
			:root {
				--color-primary: #222222;
				--color-secondary: #FFE9D6;
				--color-tertiary: #1669B6;
				--color-highlight: #FF5C33;
				--color-success: #10b981;
				--color-warning: #f59e0b;
				--color-danger: #ef4444;
				--color-neutral-50: #f8fafc;
				--color-neutral-100: #f1f5f9;
				--color-neutral-200: #e2e8f0;
				--color-neutral-300: #cbd5e1;
				--color-neutral-400: #94a3b8;
				--color-neutral-500: #64748b;
				--color-neutral-600: #475569;
				--color-neutral-700: #334155;
				--color-neutral-800: #1e293b;
				--color-neutral-900: #0f172a;

				--font-family-base: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				--font-family-mono: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;

				--font-size-xs: 0.75rem;
				--font-size-sm: 0.875rem;
				--font-size-base: 1rem;
				--font-size-lg: 1.125rem;
				--font-size-xl: 1.25rem;
				--font-size-2xl: 1.5rem;
				--font-size-3xl: 1.875rem;
				--font-size-4xl: 2.25rem;

				--spacing-xs: 0.25rem;
				--spacing-sm: 0.5rem;
				--spacing-md: 1rem;
				--spacing-lg: 1.5rem;
				--spacing-xl: 2rem;
				--spacing-2xl: 3rem;

				--border-radius-sm: 0.25rem;
				--border-radius-md: 0.5rem;
				--border-radius-lg: 0.75rem;

				--shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
				--shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
				--shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
			}

			/* Reset & Base Styles */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: var(--font-family-base);
				line-height: 1.6;
				color: var(--color-neutral-800);
				background-color: var(--color-neutral-50);
			}

			/* Layout */
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: var(--spacing-xl);
			}

			.header {
				text-align: center;
				margin-bottom: var(--spacing-2xl);
			}

			.subtitle {
				color: var(--color-neutral-600);
				font-size: var(--font-size-lg);
				margin-top: var(--spacing-sm);
			}

			.section {
				margin-bottom: var(--spacing-2xl);
			}

			.section h2 {
				font-size: var(--font-size-2xl);
				margin-bottom: var(--spacing-lg);
				padding-bottom: var(--spacing-sm);
				border-bottom: 2px solid var(--color-neutral-200);
			}

			/* Logo Styles */
			.logo-examples {
				display: flex;
				flex-direction: column;
				gap: var(--spacing-2xl);
			}

			.logo-size-demo,
			.logo-variant-demo,
			.logo-usage,
			.logo-code {
				background: white;
				padding: var(--spacing-xl);
				border-radius: var(--border-radius-lg);
				box-shadow: var(--shadow-sm);
			}

			.logo-size-demo h3,
			.logo-variant-demo h3,
			.logo-usage h3,
			.logo-code h3 {
				margin-bottom: var(--spacing-lg);
				font-size: var(--font-size-lg);
				color: var(--color-neutral-800);
			}

			.logo-sizes {
				display: flex;
				align-items: flex-end;
				gap: var(--spacing-xl);
				flex-wrap: wrap;
			}

			.logo-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: var(--spacing-sm);
				text-align: center;
			}

			.logo-label {
				font-size: var(--font-size-sm);
				font-weight: 500;
				color: var(--color-neutral-700);
			}

			.logo-item code,
			.code-block code {
				font-family: var(--font-family-mono);
				font-size: var(--font-size-xs);
				color: var(--color-neutral-600);
				background: var(--color-neutral-100);
				padding: var(--spacing-xs);
				border-radius: var(--border-radius-sm);
			}

			.logo-variants {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: var(--spacing-lg);
			}

			.logo-variant-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: var(--spacing-sm);
				text-align: center;
			}

			.logo-background {
				padding: var(--spacing-lg);
				border-radius: var(--border-radius-md);
				display: flex;
				justify-content: center;
				align-items: center;
				min-height: 100px;
			}

			.logo-background.light {
				background-color: var(--color-neutral-100);
				border: 1px solid var(--color-neutral-200);
			}

			.logo-background.dark {
				background-color: var(--color-primary);
			}

			.usage-examples {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: var(--spacing-lg);
			}

			.usage-example {
				border: 1px solid var(--color-neutral-200);
				border-radius: var(--border-radius-md);
				overflow: hidden;
			}

			.usage-example h4 {
				margin: 0;
				padding: var(--spacing-md);
				background: var(--color-neutral-50);
				font-size: var(--font-size-base);
				border-bottom: 1px solid var(--color-neutral-200);
			}

			.nav-example {
				display: flex;
				align-items: center;
				gap: var(--spacing-lg);
				padding: var(--spacing-md);
				background: white;
			}

			.nav-example span {
				font-weight: 500;
				color: var(--color-neutral-800);
			}

			.nav-example nav {
				display: flex;
				gap: var(--spacing-md);
				margin-left: auto;
			}

			.nav-example nav a {
				color: var(--color-neutral-600);
				text-decoration: none;
				font-size: var(--font-size-sm);
				padding: var(--spacing-xs) var(--spacing-sm);
				border-radius: var(--border-radius-sm);
				transition: all 0.2s ease;
			}

			.nav-example nav a:hover {
				background-color: var(--color-neutral-100);
				color: var(--color-neutral-800);
			}

			.dark-example {
				padding: var(--spacing-lg);
				background: var(--color-primary);
				color: white;
				display: flex;
				align-items: center;
				gap: var(--spacing-md);
			}

			.custom-example {
				padding: var(--spacing-lg);
				background: var(--color-neutral-50);
				display: flex;
				align-items: center;
				gap: var(--spacing-md);
			}

			.code-examples {
				display: grid;
				gap: var(--spacing-lg);
			}

			.code-block {
				background: var(--color-neutral-50);
				padding: var(--spacing-md);
				border-radius: var(--border-radius-md);
				border: 1px solid var(--color-neutral-200);
			}

			.code-block h4 {
				margin-bottom: var(--spacing-sm);
				font-size: var(--font-size-base);
				color: var(--color-neutral-800);
			}

			.code-block pre {
				background: var(--color-neutral-800);
				color: var(--color-neutral-100);
				padding: var(--spacing-md);
				border-radius: var(--border-radius-sm);
				overflow-x: auto;
				font-family: var(--font-family-mono);
				font-size: var(--font-size-sm);
				line-height: 1.5;
			}

			.props-list {
				list-style: none;
				padding: 0;
			}

			.props-list li {
				padding: var(--spacing-xs) 0;
				font-family: var(--font-family-mono);
				font-size: var(--font-size-sm);
				color: var(--color-neutral-700);
			}

			.props-list strong {
				color: var(--color-tertiary);
			}

			/* Style personnalisé pour demo */
			:global(.custom-logo) {
				filter: hue-rotate(180deg);
				transition: transform 0.3s ease;
			}

			:global(.custom-logo:hover) {
				transform: scale(1.1);
			}

			/* Colors */
			.color-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: var(--spacing-md);
			}

			.color-card {
				background: white;
				border-radius: var(--border-radius-md);
				padding: var(--spacing-md);
