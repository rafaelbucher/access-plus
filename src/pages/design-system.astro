---
// src/pages/design-system.astro
import Logo from '../components/Logo.astro';
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Design System - Astro</title>
	</head>
	<body>
		<div class="container">
			<header class="header">
				<h1>Design System</h1>
				<p class="subtitle">Guide des composants et styles utilisés dans le projet</p>
			</header>

			<!-- Logo -->
			<section class="section">
				<h2>Logo</h2>
				<div class="logo-examples">
					<div class="logo-size-demo">
						<h3>Tailles disponibles</h3>
						<div class="logo-sizes">
							<div class="logo-item">
								<Logo size="xs" />
								<span class="logo-label">XS - 128px</span>
								<code>size="xs"</code>
							</div>
							<div class="logo-item">
								<Logo size="sm" />
								<span class="logo-label">SM - 160px</span>
								<code>size="sm"</code>
							</div>
							<div class="logo-item">
								<Logo size="md" />
								<span class="logo-label">MD - 192px</span>
								<code>size="md" (défaut)</code>
							</div>
							<div class="logo-item">
								<Logo size="lg" />
								<span class="logo-label">LG - 224px</span>
								<code>size="lg"</code>
							</div>
							<div class="logo-item">
								<Logo size="xl" />
								<span class="logo-label">XL - 256px</span>
								<code>size="xl"</code>
							</div>
						</div>
					</div>

					<div class="logo-usage">
						<h3>Exemples d'utilisation</h3>
						<div class="usage-examples">
							<div class="usage-example">
								<h4>Dans une navigation</h4>
								<div class="nav-example">
									<Logo size="xs" />
									<span>MonSite</span>
									<nav>
										<a href="#">Accueil</a>
										<a href="#">Produits</a>
										<a href="#">Contact</a>
									</nav>
								</div>
							</div>
							<div class="usage-example">
								<h4>En page d'accueil</h4>
								<div class="hero-example">
									<Logo size="lg" />
									<p>Logo principal en grande taille</p>
								</div>
							</div>
							<div class="usage-example">
								<h4>Avec classes personnalisées</h4>
								<div class="custom-example">
									<Logo size="md" class="custom-logo" />
									<p>Logo avec animations personnalisées</p>
								</div>
							</div>
						</div>
					</div>

					<div class="logo-code">
						<h3>Comment utiliser</h3>
						<div class="code-examples">
							<div class="code-block">
								<h4>Import du composant</h4>
								<pre><code>---
import Logo from '../components/Logo.astro';
---</code></pre>
							</div>
							<div class="code-block">
								<h4>Utilisation basique</h4>
								<pre><code>&lt;Logo /&gt;
&lt;Logo size="lg" /&gt;
&lt;Logo size="xl" class="my-logo" /&gt;</code></pre>
							</div>
							<div class="code-block">
								<h4>Props disponibles</h4>
								<ul class="props-list">
									<li><strong>size:</strong> 'xs' | 'sm' | 'md' | 'lg' | 'xl' (défaut: 'md')</li>
									<li><strong>class:</strong> string - Classes CSS personnalisées</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Colors -->
			<section class="section">
				<h2>Couleurs</h2>
				<div class="color-grid">
					<div class="color-card">
						<div class="color-sample color-background"></div>
						<div class="color-info">
							<h3>Background</h3>
							<code>--color-background</code>
							<span class="color-value">#FFE9D6</span>
							<span class="color-description">Couleur de fond principale du site</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-text"></div>
						<div class="color-info">
							<h3>Text Primary</h3>
							<code>--color-text</code>
							<span class="color-value">#222222</span>
							<span class="color-description">Couleur principale pour la typographie</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-text-light"></div>
						<div class="color-info">
							<h3>Text Light</h3>
							<code>--color-text-light</code>
							<span class="color-value">#444444</span>
							<span class="color-description">Couleur pour les textes secondaires</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-tertiary"></div>
						<div class="color-info">
							<h3>Tertiary</h3>
							<code>--color-tertiary</code>
							<span class="color-value">#1669B6</span>
							<span class="color-description">Couleur d'accentuation bleue</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-highlight"></div>
						<div class="color-info">
							<h3>Highlight</h3>
							<code>--color-highlight</code>
							<span class="color-value">#FF5C33</span>
							<span class="color-description">Couleur pour les éléments importants</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-surface"></div>
						<div class="color-info">
							<h3>Surface</h3>
							<code>--color-surface</code>
							<span class="color-value">rgba(255,255,255,0.8)</span>
							<span class="color-description">Couleur des cartes et surfaces</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-success"></div>
						<div class="color-info">
							<h3>Success</h3>
							<code>--color-success</code>
							<span class="color-value">#10b981</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-warning"></div>
						<div class="color-info">
							<h3>Warning</h3>
							<code>--color-warning</code>
							<span class="color-value">#f59e0b</span>
						</div>
					</div>
					<div class="color-card">
						<div class="color-sample color-danger"></div>
						<div class="color-info">
							<h3>Danger</h3>
							<code>--color-danger</code>
							<span class="color-value">#ef4444</span>
						</div>
					</div>
				</div>
			</section>

			<!-- Typography -->
			<section class="section">
				<h2>Typographie</h2>
				<div class="typography-samples">
					<div class="type-sample">
						<h1>Heading 1</h1>
						<code>h1, .h1</code>
					</div>
					<div class="type-sample">
						<h2>Heading 2</h2>
						<code>h2, .h2</code>
					</div>
					<div class="type-sample">
						<h3>Heading 3</h3>
						<code>h3, .h3</code>
					</div>
					<div class="type-sample">
						<h4>Heading 4</h4>
						<code>h4, .h4</code>
					</div>
					<div class="type-sample">
						<p>Body text - Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
						<code>p, .body</code>
					</div>
					<div class="type-sample">
						<small>Small text - Informations complémentaires</small>
						<code>small, .small</code>
					</div>
				</div>
			</section>

			<!-- Buttons -->
			<section class="section">
				<h2>Boutons</h2>
				<div class="component-grid">
					<div class="component-example">
						<h3>Primary</h3>
						<div class="button-group">
							<button class="btn btn-primary">Button</button>
							<button class="btn btn-primary" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Secondary</h3>
						<div class="button-group">
							<button class="btn btn-secondary">Button</button>
							<button class="btn btn-secondary" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Tertiary</h3>
						<div class="button-group">
							<button class="btn btn-tertiary">Button</button>
							<button class="btn btn-tertiary" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Highlight</h3>
						<div class="button-group">
							<button class="btn btn-highlight">Button</button>
							<button class="btn btn-highlight" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Outline</h3>
						<div class="button-group">
							<button class="btn btn-outline">Button</button>
							<button class="btn btn-outline" disabled>Disabled</button>
						</div>
					</div>
					<div class="component-example">
						<h3>Ghost</h3>
						<div class="button-group">
							<button class="btn btn-ghost">Button</button>
							<button class="btn btn-ghost" disabled>Disabled</button>
						</div>
					</div>
				</div>
			</section>

			<!-- Form Elements -->
			<section class="section">
				<h2>Éléments de formulaire</h2>
				<div class="form-examples">
					<div class="form-group">
						<label for="input-text">Input Text</label>
						<input type="text" id="input-text" placeholder="Entrez votre texte" />
					</div>
					<div class="form-group">
						<label for="input-email">Input Email</label>
						<input type="email" id="input-email" placeholder="email@exemple.com" />
					</div>
					<div class="form-group">
						<label for="textarea">Textarea</label>
						<textarea id="textarea" placeholder="Votre message..."></textarea>
					</div>
					<div class="form-group">
						<label for="select">Select</label>
						<select id="select">
							<option>Option 1</option>
							<option>Option 2</option>
							<option>Option 3</option>
						</select>
					</div>
					<div class="form-group">
						<label class="checkbox-label">
							<input type="checkbox" />
							<span class="checkmark"></span>
							Checkbox
						</label>
					</div>
					<div class="form-group">
						<label class="radio-label">
							<input type="radio" name="radio" />
							<span class="radiomark"></span>
							Radio 1
						</label>
						<label class="radio-label">
							<input type="radio" name="radio" />
							<span class="radiomark"></span>
							Radio 2
						</label>
					</div>
				</div>
			</section>

			<!-- Cards -->
			<section class="section">
				<h2>Cartes</h2>
				<div class="card-examples">
					<div class="card">
						<div class="card-header">
							<h3>Carte basique</h3>
						</div>
						<div class="card-body">
							<p>Contenu de la carte avec du texte et des informations importantes.</p>
						</div>
						<div class="card-footer">
							<button class="btn btn-primary btn-small">Action</button>
						</div>
					</div>
					<div class="card card-elevated">
						<div class="card-header">
							<h3>Carte avec élévation</h3>
						</div>
						<div class="card-body">
							<p>Cette carte utilise une ombre plus prononcée pour créer un effet d'élévation.</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Spacing -->
			<section class="section">
				<h2>Espacement</h2>
				<div class="spacing-examples">
					<div class="spacing-demo">
						<h3>Variables d'espacement</h3>
						<div class="spacing-grid">
							<div class="spacing-item">
								<div class="spacing-box spacing-xs">XS - 4px</div>
								<code>var(--spacing-xs)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-sm">SM - 8px</div>
								<code>var(--spacing-sm)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-md">MD - 16px</div>
								<code>var(--spacing-md)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-lg">LG - 24px</div>
								<code>var(--spacing-lg)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-xl">XL - 32px</div>
								<code>var(--spacing-xl)</code>
							</div>
							<div class="spacing-item">
								<div class="spacing-box spacing-2xl">2XL - 48px</div>
								<code>var(--spacing-2xl)</code>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Grid System -->
			<section class="section">
				<h2>Système de grille</h2>
				<div class="grid-examples">
					<div class="grid-example-item">
						<h3>Grille 2 colonnes</h3>
						<div class="grid grid-2">
							<div class="grid-item">1/2</div>
							<div class="grid-item">1/2</div>
						</div>
					</div>
					<div class="grid-example-item">
						<h3>Grille 3 colonnes</h3>
						<div class="grid grid-3">
							<div class="grid-item">1/3</div>
							<div class="grid-item">1/3</div>
							<div class="grid-item">1/3</div>
						</div>
					</div>
					<div class="grid-example-item">
						<h3>Grille 4 colonnes</h3>
						<div class="grid grid-4">
							<div class="grid-item">1/4</div>
							<div class="grid-item">1/4</div>
							<div class="grid-item">1/4</div>
							<div class="grid-item">1/4</div>
						</div>
					</div>
					<div class="grid-example-item">
						<h3>Grille responsive</h3>
						<div class="grid grid-responsive">
							<div class="grid-item">Auto</div>
							<div class="grid-item">Auto</div>
							<div class="grid-item">Auto</div>
							<div class="grid-item">Auto</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Shadows & Effects -->
			<section class="section">
				<h2>Ombres et effets</h2>
				<div class="shadow-examples">
					<div class="shadow-card shadow-sm">
						<h4>Small</h4>
						<code>var(--shadow-sm)</code>
					</div>
					<div class="shadow-card shadow-md">
						<h4>Medium</h4>
						<code>var(--shadow-md)</code>
					</div>
					<div class="shadow-card shadow-lg">
						<h4>Large</h4>
						<code>var(--shadow-lg)</code>
					</div>
				</div>
			</section>

			<!-- Footer -->
			<footer class="design-system-footer">
				<div class="footer-content">
					<Logo size="xs" />
					<p>Design System - Version 1.0</p>
					<p class="footer-note">Tous les composants utilisent le nouveau schéma de couleurs avec le fond #FFE9D6 et la typographie #222222</p>
				</div>
			</footer>
		</div>

		<style>
			/* CSS Variables */
			:root {
				--color-primary: #222222;
				--color-secondary: #FFE9D6;
				--color-tertiary: #1669B6;
				--color-highlight: #FF5C33;
				--color-success: #10b981;
				--color-warning: #f59e0b;
				--color-danger: #ef4444;

				/* Nouvelles couleurs principales */
				--color-background: #FFE9D6;
				--color-text: #222222;
				--color-text-light: #444444;
				--color-surface: rgba(255, 255, 255, 0.8);
				--color-surface-hover: rgba(255, 255, 255, 0.9);
				--color-border: rgba(34, 34, 34, 0.1);

				--font-family-base: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				--font-family-mono: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;

				--font-size-xs: 0.75rem;
				--font-size-sm: 0.875rem;
				--font-size-base: 1rem;
				--font-size-lg: 1.125rem;
				--font-size-xl: 1.25rem;
				--font-size-2xl: 1.5rem;
				--font-size-3xl: 1.875rem;
				--font-size-4xl: 2.25rem;

				--spacing-xs: 0.25rem;
				--spacing-sm: 0.5rem;
				--spacing-md: 1rem;
				--spacing-lg: 1.5rem;
				--spacing-xl: 2rem;
				--spacing-2xl: 3rem;

				--border-radius-sm: 0.25rem;
				--border-radius-md: 0.5rem;
				--border-radius-lg: 0.75rem;

				--shadow-sm: 0 1px 2px 0 rgb(34 34 34 / 0.05);
				--shadow-md: 0 4px 6px -1px rgb(34 34 34 / 0.1), 0 2px 4px -2px rgb(34 34 34 / 0.1);
				--shadow-lg: 0 10px 15px -3px rgb(34 34 34 / 0.1), 0 4px 6px -4px rgb(34 34 34 / 0.1);
			}

			/* Reset & Base Styles */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				height: 100%;
			}

			body {
				font-family: var(--font-family-base);
				line-height: 1.6;
				color: var(--color-text);
				background-color: var(--color-background);
				min-height: 100vh;
			}

			h1, h2, h3, h4, h5, h6 {
				color: var(--color-text);
			}

			/* Layout */
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: var(--spacing-xl);
			}

			.header {
				text-align: center;
				margin-bottom: var(--spacing-2xl);
			}

			.subtitle {
				color: var(--color-text-light);
				font-size: var(--font-size-lg);
				margin-top: var(--spacing-sm);
			}

			.section {
				margin-bottom: var(--spacing-2xl);
			}

			.section h2 {
				font-size: var(--font-size-2xl);
				margin-bottom: var(--spacing-lg);
				padding-bottom: var(--spacing-sm);
				border-bottom: 2px solid var(--color-border);
				color: var(--color-text);
			}

			/* Logo Styles */
			.logo-examples {
				display: flex;
				flex-direction: column;
				gap: var(--spacing-2xl);
			}

			.logo-size-demo,
			.logo-usage,
			.logo-code {
				background: var(--color-surface);
				padding: var(--spacing-xl);
				border-radius: var(--border-radius-lg);
				box-shadow: var(--shadow-sm);
				border: 1px solid var(--color-border);
			}

			.logo-size-demo h3,
			.logo-usage h3,
			.logo-code h3 {
				margin-bottom: var(--spacing-lg);
				font-size: var(--font-size-lg);
				color: var(--color-text);
			}

			.logo-sizes {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: var(--spacing-xl);
				align-items: center;
			}

			.logo-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: var(--spacing-sm);
				text-align: center;
			}

			.logo-label {
				font-size: var(--font-size-sm);
				font-weight: 500;
				color: var(--color-text);
			}

			.logo-item code,
			.code-block code {
				font-family: var(--font-family-mono);
				font-size: var(--font-size-xs);
				color: var(--color-text-light);
				background: rgba(255, 255, 255, 0.5);
				padding: var(--spacing-xs);
				border-radius: var(--border-radius-sm);
			}

			.usage-examples {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: var(--spacing-lg);
			}

			.usage-example {
				border: 1px solid var(--color-border);
				border-radius: var(--border-radius-md);
				overflow: hidden;
				background: var(--color-surface);
			}

			.usage-example h4 {
				margin: 0;
				padding: var(--spacing-md);
				background: rgba(255, 255, 255, 0.3);
				font-size: var(--font-size-base);
				border-bottom: 1px solid var(--color-border);
				color: var(--color-text);
			}

			.nav-example {
				display: flex;
				align-items: center;
				gap: var(--spacing-lg);
				padding: var(--spacing-md);
				background: var(--color-surface);
			}

			.nav-example span {
				font-weight: 500;
				color: var(--color-text);
			}

			.nav-example nav {
				display: flex;
				gap: var(--spacing-md);
				margin-left: auto;
			}

			.nav-example nav a {
				color: var(--color-text-light);
				text-decoration: none;
				font-size: var(--font-size-sm);
				padding: var(--spacing-xs) var(--spacing-sm);
				border-radius: var(--border-radius-sm);
				transition: all 0.2s ease;
			}

			.nav-example nav a:hover {
				background-color: rgba(255, 255, 255, 0.5);
				color: var(--color-text);
			}

			.hero-example,
			.custom-example {
				padding: var(--spacing-lg);
				background: var(--color-surface);
				display: flex;
				align-items: center;
				gap: var(--spacing-md);
				flex-direction: column;
				text-align: center;
			}

			.hero-example p,
			.custom-example p {
				color: var(--color-text-light);
				margin: 0;
			}

			.code-examples {
				display: grid;
				gap: var(--spacing-lg);
			}

			.code-block {
				background: rgba(255, 255, 255, 0.3);
				padding: var(--spacing-md);
				border-radius: var(--border-radius-md);
